<h1>注文履歴詳細</h1>
<p>購入者</p>
  <%= @order.name %>
<p>注文日</p>
<%= @order.created_at.strftime('%Y/%m/%d') %>
<p>配送先</p>
<%= @order.postal_code %>
<%= @order.address %>
<%= @order.name %>
<p>支払方法</p>
<%= @order.payment_method_i18n %>

<% @order_items.each do |order_item| %>
<p>商品名</p>
<%= order_item.item.name %>
<p>単価（税込）</p>
<%= order_item.item.with_tax_price %>
<p>数量</p>
<%= order_item.amount %>
<p>小計</p>
<%= order_item.item.with_tax_price * order_item.amount %>
<% end %>

<p>商品合計</p>
<%= @order.total_price - @order.postage %>
<p>送料</p>
<%= @order.postage %>
<p>請求金額合計</p>
<%= @order.total_price.to_s(:delimited) %>
