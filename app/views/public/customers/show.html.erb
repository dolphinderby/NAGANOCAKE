<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1">
      <h2>マイページ</h2>
      <a>登録情報</a>
      <a><%= link_to "編集する", customers_my_page_edit_path %></a>
      <tbody>
        <table border="1" width="80%">
          <tr>
            <td width="30%">氏名</td>
            <td width="70%"><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>カナ</td>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </tbody>
      <nav class="nav">
        <a>注文履歴</a>
        <a><%= link_to "一覧を見る", orders_path %></a>
      </nav>
    </div>
  </div>
</div>