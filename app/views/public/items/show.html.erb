<h2>商品詳細</h2>
<%= image_tag @item.get_image %>
<h3><%= @item.name %></h3>
<p><%= @item.introduction %></p>
<td>￥<%= @item.with_tax_price %>(税込)</td>
<%= form_with model: @cart_item do |f| %>
  <%= f.hidden_field :item_id, :value => @item.id %>
  <%= f.select :amount, *[1..99] %>
  <%= f.submit "カートに入れる" %>
<% end %>