<div class="container">
  <h1>注文情報確認</h1>
  <div class="row">
    <div class="col-md-8">
      <table border="1" width="100%">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart| %>
            <tr>
              <td>
                <%= image_tag cart.item.get_image %>
                <%= cart.item.name %>
              </td>
              <td><%= cart.item.with_tax_price %></td>
              <td><%= cart.amount %></td>
              <td><%= (cart.item.with_tax_price*cart.amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <tbody>
        <table border="1">
          <tr>
            <td>送料</td>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @subtotal %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @subtotal.to_i + @postage %></td>
          </tr>
        </table>
      </tbody>
    </div>
        <table>
        <tr>
          <td>支払方法</td>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <td>お届け先</td>
          <td>
            <%= @order.postal_code %>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        </table>
      </div>
        <table>
          <%= form_with model: @order, url: '/orders' do |f| %>
            <%= f.hidden_field :name, value: @order.name %>
            <%= f.hidden_field :postal_code, value: @order.postal_code %>
            <%= f.hidden_field :address, value: @order.address %>
            <%= f.hidden_field :payment_method, value: @order.payment_method %>
            <%= f.hidden_field :total_price, value: @subtotal.to_i + @postage %>
            <%= f.submit "注文を確定する" %>
          <% end %>
        </table>
    </div>
  </div>
</div>