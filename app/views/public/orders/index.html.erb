<h1>注文履歴一覧</h1>
<% @orders.each do |order| %>
  <p>注文日</p>
  <%= order.created_at.strftime('%Y/%m/%d') %>
  <p>配送先</p>
  <%= order.postal_code %>
  <%= order.address %>
  <%= order.name %>
  <p>注文商品</p>
  <% order.items.each do |item| %>
    <p><%= item.name %></p>
  <% end %>
  <p>支払金額</p>
  <p><%= order.total_price + order.postage %>円</p>
  <%= link_to "注文詳細", order_path(order.id) %>
<% end %>
