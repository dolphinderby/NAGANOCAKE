<h1>注文情報入力</h1>
<p>支払方法</p>
<%= form_with model: @order, url: '/orders/comfirm', method: :post do |f| %>
  <%= f.radio_button :payment_method, "credit_card" %>
  <%= f.label :payment_method_credit_card, "クレジットカード" %><br>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method_transfer, "銀行振込" %>

<p>お届け先</p>
  <%= f.radio_button :address_number, 1 %>
  <%= f.label :address_number_1, "ご自身の住所" %><br>
  <%= current_customer.postal_code %>
  <%= current_customer.address %><br>
  <%= current_customer.last_name %><%= current_customer.first_name %><br>

  <%= f.radio_button :address_number, 2 %>
  <%= f.label :address_number_2, "新しいお届け先" %><br>
  <%= f.label :postal_code, "郵便番号（ハイフンなし）" %>
  <%= f.text_field :postal_code %><br>
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %><br>
  <%= f.label :address_name, "宛名" %>
  <%= f.text_field :address_name %><br>

  <%= f.hidden_field :total_price, :value => @subtotal %>

  <%= f.submit "確認画面へ進む" %>

<% end %>
